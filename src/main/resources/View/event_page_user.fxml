<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.EventPage">
   <children>
      <Pane prefHeight="600.0" prefWidth="354.0" style="-fx-background-color: #6eecc6;">
         <children>
            <JFXButton fx:id="btnBack" layoutX="10.0" layoutY="5.0" onAction="#btnBackPageOnClick" text="Kembali" textFill="#fffefe" textOverrun="CENTER_ELLIPSIS">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Assets/Image/arrow.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <Label layoutX="78.0" layoutY="154.0" text="Data Event" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            <Label layoutX="19.0" layoutY="194.0" prefHeight="82.0" prefWidth="316.0" text="Temukan data event yang telah ditambahkan oleh Komunitas dan Admin." textAlignment="CENTER" textFill="WHITE" wrapText="true" />
            <ImageView fitHeight="48.0" fitWidth="152.0" layoutX="212.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Assets/Image/Logowht.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <JFXComboBox fx:id="cbbFilter" focusColor="#6eecc6" layoutX="367.0" layoutY="31.0" prefHeight="28.0" prefWidth="200.0" promptText="Filter Event" style="-fx-prompt-text-fill: #908e8e;" unFocusColor="#d6d3d3" />
      <JFXTextField fx:id="txtCari" focusColor="#6eecc6" layoutX="685.0" layoutY="33.0" prefHeight="26.0" prefWidth="200.0" promptText="Cari event" style="-fx-prompt-text-fill: #908e8e;" text="JumlahVolunteer" unFocusColor="#d6d3d3" />
      <TableView fx:id="tableUsr" layoutX="365.0" layoutY="88.0" prefHeight="487.0" prefWidth="519.0">
        <columns>
            <TableColumn fx:id="colKomunitasUsr" prefWidth="198.0" text="Komunitas" />
          <TableColumn fx:id="colJudulUsr" prefWidth="372.0" text="Judul Event" />
          <TableColumn fx:id="colTanggalUsr" minWidth="0.0" prefWidth="150.0" text="Tanggal" />
            <TableColumn fx:id="colJmlhDonasi" minWidth="0.0" prefWidth="150.0" text="Jumlah Donasi" />
            <TableColumn fx:id="colJmlhVolunteer" minWidth="0.0" prefWidth="150.0" text="Jumlah Volunteer" />
            <TableColumn fx:id="colStatusUsr" minWidth="0.0" prefWidth="83.0" text="Status" />
        </columns>
      </TableView>
      <JFXButton fx:id="btnClose" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" layoutX="865.0" layoutY="1.0" onAction="#btnCloseOnClick" prefHeight="30.0" prefWidth="20.0">
         <graphic>
            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Assets/Image/exit_primary.png" />
               </image>
            </ImageView>
         </graphic>
      </JFXButton>
   </children>
</AnchorPane>
