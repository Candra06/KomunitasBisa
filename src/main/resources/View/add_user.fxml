                        <Font size="16.0" />
                    </font></JFXButton>
                <ImageView fitHeight="48.0" fitWidth="169.0" layoutX="219.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Assets/Image/Logowht.png" />
                    </image>
                </ImageView>
            </children>
        </Pane>
        <JFXButton fx:id="btnClose" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" layoutX="862.0" layoutY="3.0" onAction="#btnCloseOnClick" prefHeight="30.0" prefWidth="20.0">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Assets/Image/exit_primary.png" />
                    </image>
                </ImageView>
            </graphic>
        </JFXButton>
    </children>
