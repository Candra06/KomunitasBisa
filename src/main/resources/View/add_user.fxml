              <Label layoutX="51.0" layoutY="44.0" text="Lengkapi data berikut dengan benar" textFill="#908e8e" />
            </children>
        </Pane>
        <Pane prefHeight="600.0" prefWidth="354.0" style="-fx-background-color: #6eecc6;">
            <children>
                <JFXButton fx:id="btnBack" layoutX="8.0" layoutY="5.0" onAction="#btnBackPageOnClick" text="Kembali" textFill="#fffefe" textOverrun="CENTER_ELLIPSIS">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../Assets/Image/arrow.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </JFXButton>
                <Label layoutX="57.0" layoutY="154.0" text="Tambah User" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>

