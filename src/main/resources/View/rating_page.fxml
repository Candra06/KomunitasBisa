      </Pane>
      <JFXTextField fx:id="txtCari" focusColor="#6eecc6" layoutX="378.0" layoutY="44.0" prefHeight="26.0" prefWidth="507.0" promptText="Cari Komunitas" style="-fx-prompt-text-fill: #908e8e;" unFocusColor="#d6d3d3" />
