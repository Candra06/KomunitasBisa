<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.RatingPage">
   <children>
      <JFXListView fx:id="listRating" layoutX="379.0" layoutY="87.0" onMouseClicked="#cellOnClick" prefHeight="487.0" prefWidth="507.0" />
      <Pane prefHeight="600.0" prefWidth="354.0" style="-fx-background-color: #6eecc6;">
         <children>
            <Label layoutX="78.0" layoutY="154.0" text="Data Rating" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            <Label layoutX="19.0" layoutY="194.0" prefHeight="82.0" prefWidth="316.0" text="Klik tombol Tambah Rating untuk memberi rating kepada Komunitas" textAlignment="CENTER" textFill="WHITE" wrapText="true" />
